{
  "manifest_version": 3,
  "name": "MoodScope",
  "version": "1.0.0",
  "description": "Real-time sentiment analysis across social media platforms with interactive widgets and dynamic visualizations.",
  "author": "Labib Bin Shahed",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://reddit.com/*",
    "https://www.reddit.com/*",
    "https://instagram.com/*",
    "https://www.instagram.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/twitter.js"],
      "css": ["css/content.css"]
    },
    {
      "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/facebook.js"],
      "css": ["css/content.css"]
    },
    {
      "matches": [
        "https://linkedin.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/linkedin.js"],
      "css": ["css/content.css"]
    },
    {
      "matches": [
        "https://reddit.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/reddit.js"],
      "css": ["css/content.css"]
    },
    {
      "matches": [
        "https://instagram.com/*",
        "https://www.instagram.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/instagram.js"],
      "css": ["css/content.css"]
    },
    {
      "matches": [
        "https://youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["js/sentiment-engine.js", "js/content-scripts/youtube.js"],
      "css": ["css/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MoodScope - Sentiment Analysis",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["css/*", "js/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}